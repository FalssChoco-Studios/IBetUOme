<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".NewBowme">
	<RelativeLayout
	    android:id="@+id/RelativeLayout1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/backg"
	    android:orientation="vertical"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	     >
	
	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="12dp"
	        android:layout_marginLeft="38dp"
	        android:text="Title:" />
	
	    <EditText
	        android:id="@+id/title"
	        android:layout_width="230dp"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/textView2"
	        android:layout_marginLeft="70dp"
	        android:ems="6"
	        android:textSize="14dp" 
	        android:inputType="textMultiLine">
	
	    </EditText>
	
	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignRight="@+id/textView2"
	        android:layout_below="@+id/title"
	        android:layout_marginLeft="0dp"
	        android:layout_marginTop="20dp"
	        android:textSize="12dp"
	        android:text="Participants:" />
	
	    <EditText
	        android:id="@+id/participants"
	        android:layout_width="180dp"
	        android:maxLines="1"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/title"
	        android:layout_alignBottom="@+id/textView1"
	        android:layout_toRightOf="@+id/textView1"
	        android:ems="6"
	        android:clickable="false" 
	        android:cursorVisible="false" 
	        android:focusable="false" 
	        android:focusableInTouchMode="false"
	        android:textSize="14sp" 
	        android:inputType="textMultiLine"/>
	    
	    <Button
	        android:id="@+id/addcontact"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_alignBottom="@+id/textView1"
	        android:layout_toRightOf="@+id/participants"
	        android:background="@drawable/ic_action_add_person" />
	
	    <TextView
	        android:id="@+id/textView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignRight="@+id/textView2"
	        android:layout_marginTop="20dp"
	        android:layout_below="@+id/participants"
	        android:textSize="12sp"
	        android:text="Description:" />
	
	    <EditText
	        android:id="@+id/description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/title"
	        android:layout_alignRight="@+id/title"
	        android:layout_alignTop="@+id/textView3"
	        android:ems="6"
	        android:scrollbars="vertical"
	        android:textSize="14sp" />
	
	    <TextView
	        android:id="@+id/textView4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignRight="@+id/textView2"
	        android:layout_below="@+id/description"
	        android:layout_marginTop="20dp"
	        android:text="Value: $" />
	
	    <EditText
	        android:id="@+id/money"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/title"
	        android:layout_alignBottom="@+id/textView4"
	        android:ems="6"
	        android:textSize="14dp"
	        android:inputType="number" />
	
	    <Button
	        android:id="@+id/bSend"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/money"
	        android:layout_marginLeft="100dp"
	        android:layout_marginTop="20dp"
	        android:text="@string/send" />

	    <Button
	        android:id="@+id/Button01"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/bSend"
	        android:layout_below="@+id/bSend"
	        android:layout_marginTop="143dp"
	        android:text="@string/F_U" />
	
	</RelativeLayout>
</ScrollView>